{
  "manifest_version": 3,
  "name": "Watchmarker for Youtube",
  "description": "A fork of the original Youtube Watchmarker, now with manifest v3 and supabase remote sync",
  "homepage_url": "https://github.com/widike/youtube-watchmarker",
  "version": "1.0.0",
  
  "permissions": [
    "storage",
    "alarms",
    "downloads",
    "history",
    "tabs",
    "cookies",
    "webRequest",
    "scripting",
    "declarativeNetRequest"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "js": ["content/progress-hook.js", "youtube.js"]
    }
  ],
  
  "options_ui": {
    "page": "content/index.html",
    "open_in_tab": true
  },
  
  "action": {
    "default_title": "Watchmarker for Youtube",
    "default_icon": {
      "72": "content/icon.png"
    },
    "default_popup": "popup.html"
  },
  
  "icons": {
    "72": "content/icon.png"
  },
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },

   "browser_specific_settings": {
    "gecko": {
      "id": "yourect@coderect.com",
      "strict_min_version": "60.0"
    }
  }
}