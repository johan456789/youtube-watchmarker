{
    "manifest_version": 3,

    "name": "Watchmarker for Youtubee",
    "description": "Automatically mark videos on Youtube that you have already watched.",
    "homepage_url": "https://sniklaus.com/",

    "version": "5.0.0",

    "permissions": [
        "alarms",
        "cookies",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "downloads",
        "history",
        "scripting",
        "storage",
        "tabs"
    ],

    "host_permissions": ["*://www.youtube.com/*", "*://m.youtube.com/*"],

    "options_ui": {
        "page": "content/index.html",
        "open_in_tab": true
    },

    "icons": {
        "72": "content/icon.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [{
        "matches": ["*://www.youtube.com/*", "*://m.youtube.com/*"],
        "css": [],
        "js": ["youtube.js"],
        "run_at": "document_start",
        "world": "ISOLATED"
    }, {
        "matches": ["*://www.youtube.com/*", "*://m.youtube.com/*"],
        "css": [],
        "js": ["hooks.js"],
        "run_at": "document_start",
        "world": "MAIN"
    }],

    "action": {
        "default_title": "Youtube Watchmarker",
        "default_icon": {
            "72" : "content/icon.png"
        }
    }
}
